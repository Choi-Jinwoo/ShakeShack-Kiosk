<UserControl x:Class="ShakeShack_Kiosk.Controls.TotalSalesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShakeShack_Kiosk.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="tbTotalSales"/>
            <TextBlock x:Name="tbTotalSalesExcludeDiscount"/>
            <TextBlock x:Name="tbDiscountPrice"/>
            <TextBlock x:Name="tbCardSales"/>
            <TextBlock x:Name="tbCashSales"/>
        </StackPanel>
    </Grid>
</UserControl>
